{
  "version": "0.1.5",
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format cjs,esm",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint",
      "pre-publish": "tsdx build"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@content-app/core",
  "author": "Jan-Markus Langer",
  "module": "dist/content-app.esm.js",
  "size-limit": [
    {
      "path": "dist/content-app.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/content-app.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.2",
    "@types/jest": "^29.5.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "size-limit": "^8.1.2",
    "ts-jest": "^29.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@content-app/types": "^0.1.0",
    "contentful": "^9.3.3",
    "contentful-management": "^10.29.3"
  }
}
